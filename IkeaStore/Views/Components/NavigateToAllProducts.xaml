<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IkeaStore.Views.Components.NavigateToAllProducts">
    <ContentView.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="CenterAndExpand"
                     Spacing="20">

            <ImageButton Source="arrowright"
                         HeightRequest="50"
                         WidthRequest="50"/>

            <Label Text="See all" TextColor="Black" FontSize="18"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>
